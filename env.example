# Gemini API (for AI Chat)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (for Text-to-Speech)
OPENAI_API_KEY=your_openai_api_key_here

# Replicate API (for image generation)
# Get your token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Firebase Admin SDK
# Get this from Firebase Console > Project Settings > Service Accounts
# Download the JSON file and paste its contents as a single-line string
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Free Plan Limits
JJJAI_FREE_MAX_CHAT_MESSAGES_PER_DAY=30
JJJAI_FREE_MAX_CHAT_CHARS=2000
JJJAI_FREE_MAX_TTS_CLIPS_PER_DAY=5
JJJAI_FREE_MAX_TTS_SECONDS_PER_CLIP=30
JJJAI_FREE_MAX_IMAGES_PER_DAY=5

# Pro Plan Limits
JJJAI_PRO_MAX_CHAT_MESSAGES_PER_MONTH=1000
JJJAI_PRO_MAX_CHAT_CHARS=6000
JJJAI_PRO_MAX_TTS_MINUTES_PER_MONTH=300
JJJAI_PRO_MAX_IMAGES_PER_MONTH=300

# Admin Panel
# Password for admin panel access (change this in production!)
ADMIN_PASSWORD=IdujjGF304W975#7OIH
# Secret key for admin API access (required header: x-admin-key)
# Set the same value for both ADMIN_SECRET_KEY and NEXT_PUBLIC_ADMIN_SECRET_KEY
ADMIN_SECRET_KEY=your_admin_secret_key_here
NEXT_PUBLIC_ADMIN_SECRET_KEY=your_admin_secret_key_here

# Development (optional)
# For testing without full auth, you can set these headers:
# x-user-id: test-user-123
# x-user-email: test@example.com
NODE_ENV=development

